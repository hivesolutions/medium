<build_automation xmlns="http://www.hive.pt"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.hive.pt xsd/baf.xsd">
    <artifact>
        <id>pt.hive.hive_development.plugins.service.media_dashboard</id>
        <version>1.0.0</version>
        <type>colony</type>
        <name>Media Dashboard Service Plugin</name>
        <description>The plugin that offers the media dashboard service</description>
        <url>http://www.hive.pt</url>
    </artifact>
    <build>
        <default_stage>build</default_stage>
        <plugins>
            <plugin>
                <id>pt.hive.colony.plugins.build.automation.extensions.packing</id>
                <version>1.0.0</version>
                <stage>build</stage>
                <configuration>
                    <type>plugin</type>
                    <specification_file>$base{plugin_directory}/service_media_dashboard_plugin.json</specification_file>
                </configuration>
            </plugin>
        </plugins>
    </build>
</build_automation>
